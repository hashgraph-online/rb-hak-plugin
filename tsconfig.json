{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "baseUrl": "."
  },
  "include": ["src", "demo"],
  "exclude": ["node_modules", "dist"]
}
